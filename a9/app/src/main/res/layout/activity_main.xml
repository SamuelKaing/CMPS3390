<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="stellar"
            type="skaing.a9.Coin" />
        <variable
            name="ripple"
            type="skaing.a9.Coin" />
    </data>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <TableRow
            android:id="@+id/trStellar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onTableRowClick"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/stellar" />

            <TextView
                android:id="@+id/txtStellar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@{stellar.curValue}"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/trRipple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onTableRowClick"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/xrp" />

            <TextView
                android:id="@+id/txtRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@{ripple.curValue}"
                android:textSize="30sp" />
        </TableRow>

        <FrameLayout
            android:id="@+id/flFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AAA" />
    </TableLayout>
</layout>
